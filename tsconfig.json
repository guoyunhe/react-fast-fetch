{
  "compilerOptions": {
    "checkJs": false,
    "paths": {
      "react-fast-fetch": ["./src"]
    },
    "types": ["rive/globals", "node", "vitest/globals"],
    "target": "es2020",
    "lib": ["esnext", "dom", "dom.iterable"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react"
  },
  "exclude": [".rive", "build", "coverage", "dist", "node_modules"]
}
